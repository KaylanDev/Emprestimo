@model IEnumerable<EmprestimosModel>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class=" text-white">Emprestimo</h1>
        <a asp-controller="Emprestimos" asp-action="Cadastrar" class="btn btn-secondary">
            cadastrar novo emprestimo
        </a>
    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Data</th>
                <th></th>
            </tr>
            

        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Recebedor</td>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.DataUltimaAtualizacao</td>
                        <td>
                            <a asp-controller="Emprestimos" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Emprestimos" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
