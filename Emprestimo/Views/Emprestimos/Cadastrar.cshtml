@model EmprestimosModel
@{
    ViewData["title"] = "Cadastrar Emprestimos";
}
<div class="container   bg-secondary bg-dark p-5 rounded-5 " >
    <div class=" text-center">
        <h1 class=" text-success display-2 text-opacity-75 ">Cadastrar</h1>
    </div>
<form method="post" asp-controller="Emprestimos" asp-action="Cadastrar" >
    <div class="mb-3">
        <label for="Recebedor" class="form-label text-primary fs-4 text-white">Recebedor</label>
        <input type="text" class="form-control bg-dark text-white" asp-for="Recebedor" id="Recebedor" placeholder="Quem é o recebedor?">
            <span asp-validation-for="Recebedor" class="text-danger"></span>
    </div>
    <div class="mb-3">
            <label for="Fornecedor" class="form-label text-primary fs-4 text-white">Fornecedor</label>
            <input type="text" class="form-control bg-dark text-white" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem é o fornecedor?">
            <span asp-validation-for="Fornecedor" class="text-danger"></span>

    </div>
        <div class="mb-3">
            <label for="Livro" class="form-label text-primary fs-4 text-white">Livro</label>
            <input type="text" class="form-control text-light " asp-for="LivroEmprestado" id="Livro" placeholder="Qual o Livro?">
            <span asp-validation-for="LivroEmprestado" class="text-danger"></span>
        </div>
    <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success mb-3 w-50">Enviar</button>
            <a asp-controller="Emprestimos" asp-action="Index" class="btn btn-primary  mb-3 w-50">Voltar</a>
    </div>
</form>
</div>